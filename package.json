{
  "name": "reviewer",
  "displayName": "Reviewer - AI Code Review Assistant",
  "description": "Generate comprehensive diff reports and AI-powered code reviews with Google Gemini or OpenRouter",
  "version": "0.0.2",
  "publisher": "kritix",
  "repository": {
    "type": "git",
    "url": "https://github.com/kritix/reviewer.git"
  },
  "bugs": {
    "url": "https://github.com/kritix/reviewer/issues"
  },
  "homepage": "https://github.com/kritix/reviewer#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Linters",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reviewer",
          "title": "AI Code Reviewer",
          "icon": "resources/icons/reviewer.svg"
        }
      ]
    },
    "views": {
      "reviewer": [
        {
          "id": "reviewer.quickActions",
          "name": "Quick Actions",
          "icon": "$(rocket)",
          "contextualTitle": "Reviewer Quick Actions"
        },
        {
          "id": "reviewer.dashboard",
          "name": "Dashboard",
          "icon": "$(dashboard)",
          "contextualTitle": "Review Dashboard",
          "visibility": "visible"
        },
        {
          "id": "reviewer.history",
          "name": "Review History",
          "icon": "$(history)",
          "contextualTitle": "Review History"
        },
        {
          "id": "reviewer.configuration",
          "name": "Configuration",
          "icon": "$(settings-gear)",
          "contextualTitle": "Reviewer Configuration"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "reviewer.quickActions",
        "contents": "Welcome to AI Code Reviewer! ðŸš€\n\nGet started by generating your first review:\n[$(diff) Generate Comprehensive Diff](command:reviewer.generateComprehensiveDiff)\n[$(hubot) Generate AI Review](command:reviewer.generateAIReview)\n\nNo API key configured? [Set up API keys](command:reviewer.setupApiKeys)"
      },
      {
        "view": "reviewer.history",
        "contents": "No reviews yet.\n\n[Generate your first review](command:reviewer.generateAIReview)"
      }
    ],
    "commands": [
      {
        "command": "reviewer.generateComprehensiveDiff",
        "title": "Generate Comprehensive Diff",
        "category": "Reviewer",
        "icon": "$(diff)"
      },
      {
        "command": "reviewer.generateAIReview",
        "title": "Generate AI Review",
        "category": "Reviewer",
        "icon": "$(hubot)"
      },
      {
        "command": "reviewer.generateComprehensiveReview",
        "title": "Generate Comprehensive Review",
        "category": "Reviewer",
        "icon": "$(checklist)"
      },
      {
        "command": "reviewer.generateSecurityReview",
        "title": "Generate Security Review",
        "category": "Reviewer",
        "icon": "$(shield)"
      },
      {
        "command": "reviewer.generatePerformanceReview",
        "title": "Generate Performance Review",
        "category": "Reviewer",
        "icon": "$(dashboard)"
      },
      {
        "command": "reviewer.generateArchitectureReview",
        "title": "Generate Architecture Review",
        "category": "Reviewer",
        "icon": "$(organization)"
      },
      {
        "command": "reviewer.generateTestingReview",
        "title": "Generate Testing Review",
        "category": "Reviewer",
        "icon": "$(beaker)"
      },
      {
        "command": "reviewer.generateDocumentationReview",
        "title": "Generate Documentation Review",
        "category": "Reviewer",
        "icon": "$(book)"
      },
      {
        "command": "reviewer.clearApiKey",
        "title": "Clear API Keys",
        "category": "Reviewer"
      },
      {
        "command": "reviewer.showLogs",
        "title": "Show Logs",
        "category": "Reviewer"
      },
      {
        "command": "reviewer.refreshQuickActions",
        "title": "Refresh Quick Actions",
        "category": "Reviewer",
        "icon": "$(refresh)"
      },
      {
        "command": "reviewer.refreshDashboard",
        "title": "Refresh Dashboard",
        "category": "Reviewer",
        "icon": "$(refresh)"
      },
      {
        "command": "reviewer.refreshHistory",
        "title": "Refresh History",
        "category": "Reviewer",
        "icon": "$(refresh)"
      },
      {
        "command": "reviewer.setupApiKeys",
        "title": "Setup API Keys",
        "category": "Reviewer",
        "icon": "$(key)"
      },
      {
        "command": "reviewer.openReport",
        "title": "Open Report",
        "category": "Reviewer",
        "icon": "$(open-preview)"
      },
      {
        "command": "reviewer.deleteReport",
        "title": "Delete Report",
        "category": "Reviewer",
        "icon": "$(trash)"
      },
      {
        "command": "reviewer.switchProvider",
        "title": "Switch AI Provider",
        "category": "Reviewer",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "reviewer.setupCI",
        "title": "Setup CI/CD Integration",
        "category": "Reviewer",
        "icon": "$(gear)"
      },
      {
        "command": "reviewer.configureCI",
        "title": "Configure CI Settings",
        "category": "Reviewer",
        "icon": "$(settings-gear)"
      },
      {
        "command": "reviewer.searchHistory",
        "title": "Search Review History",
        "category": "Reviewer",
        "icon": "$(search)"
      },
      {
        "command": "reviewer.exportHistory",
        "title": "Export Review History",
        "category": "Reviewer",
        "icon": "$(export)"
      },
      {
        "command": "reviewer.importHistory",
        "title": "Import Review History",
        "category": "Reviewer",
        "icon": "$(import)"
      },
      {
        "command": "reviewer.clearHistory",
        "title": "Clear Review History",
        "category": "Reviewer",
        "icon": "$(clear-all)"
      },
      {
        "command": "reviewer.showStatistics",
        "title": "Show Review Statistics",
        "category": "Reviewer",
        "icon": "$(graph)"
      },
      {
        "command": "reviewer.openInteractiveReview",
        "title": "Open Interactive Review",
        "category": "Reviewer",
        "icon": "$(preview)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "reviewer.refreshQuickActions",
          "when": "view == reviewer.quickActions",
          "group": "navigation"
        },
        {
          "command": "reviewer.refreshDashboard",
          "when": "view == reviewer.dashboard",
          "group": "navigation"
        },
        {
          "command": "reviewer.refreshHistory",
          "when": "view == reviewer.history",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "reviewer.openReport",
          "when": "view == reviewer.history && viewItem == report",
          "group": "inline"
        },
        {
          "command": "reviewer.openInteractiveReview",
          "when": "view == reviewer.history && viewItem == report",
          "group": "inline"
        },
        {
          "command": "reviewer.deleteReport",
          "when": "view == reviewer.history && viewItem == report",
          "group": "inline"
        }
      ],
      "scm/title": [
        {
          "command": "reviewer.generateComprehensiveDiff",
          "group": "navigation",
          "when": "scmProvider == git"
        },
        {
          "command": "reviewer.generateAIReview",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "view/title": [
        {
          "command": "reviewer.generateComprehensiveDiff",
          "group": "navigation",
          "when": "view == workbench.scm"
        },
        {
          "command": "reviewer.generateAIReview",
          "group": "navigation",
          "when": "view == workbench.scm"
        }
      ]
    },
    "keybindings": [
      {
        "command": "reviewer.generateComprehensiveDiff",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "reviewer.generateAIReview",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Reviewer",
      "properties": {
        "reviewer.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size in bytes to include in reports (default: 1MB)",
          "minimum": 1024
        },
        "reviewer.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/package-lock.json",
            "**/yarn.lock",
            "**/*.log"
          ],
          "description": "Glob patterns to exclude from diffs and reviews",
          "items": {
            "type": "string"
          }
        },
        "reviewer.aiProvider": {
          "type": "string",
          "enum": [
            "gemini",
            "openrouter"
          ],
          "default": "gemini",
          "description": "AI provider to use for code reviews"
        },
        "reviewer.aiModel": {
          "type": "string",
          "enum": [
            "gemini-3-pro-preview",
            "gemini-1.5-pro",
            "gemini-1.5-flash",
            "gemini-2.0-flash-exp"
          ],
          "default": "gemini-3-pro-preview",
          "description": "Gemini AI model to use for code reviews"
        },
        "reviewer.openRouterModel": {
          "type": "string",
          "default": "openai/gpt-4o",
          "description": "OpenRouter model to use (e.g., openai/gpt-4o, anthropic/claude-3.5-sonnet, google/gemini-pro-1.5)"
        },
        "reviewer.customPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom AI review prompt (leave empty to use default)",
          "editPresentation": "multilineText"
        },
        "reviewer.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Custom directory for generated reports (relative to workspace root, leave empty for workspace root)"
        },
        "reviewer.autoOpenReports": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open reports after generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "ci-review": "node scripts/ci-review.js",
    "package": "vsce package"
  },
  "keywords": [
    "git",
    "diff",
    "review",
    "ai",
    "gemini",
    "code-review",
    "code-quality"
  ],
  "author": "Kritix",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "node-fetch": "^3.3.2"
  }
}
