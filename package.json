{
  "name": "reviewer",
  "displayName": "Reviewer - AI Code Review Assistant",
  "description": "Generate comprehensive diff reports and AI-powered code reviews with Google Gemini or OpenRouter",
  "version": "0.0.2",
  "publisher": "reviewer",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reviewer.generateComprehensiveDiff",
        "title": "Generate Comprehensive Diff",
        "category": "Reviewer",
        "icon": "$(diff)"
      },
      {
        "command": "reviewer.generateAIReview",
        "title": "Generate AI Review",
        "category": "Reviewer",
        "icon": "$(hubot)"
      },
      {
        "command": "reviewer.clearApiKey",
        "title": "Clear API Keys",
        "category": "Reviewer"
      },
      {
        "command": "reviewer.showLogs",
        "title": "Show Logs",
        "category": "Reviewer"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "reviewer.generateComprehensiveDiff",
          "group": "navigation",
          "when": "scmProvider == git"
        },
        {
          "command": "reviewer.generateAIReview",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "view/title": [
        {
          "command": "reviewer.generateComprehensiveDiff",
          "group": "navigation",
          "when": "view == workbench.scm"
        },
        {
          "command": "reviewer.generateAIReview",
          "group": "navigation",
          "when": "view == workbench.scm"
        }
      ]
    },
    "keybindings": [
      {
        "command": "reviewer.generateComprehensiveDiff",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "reviewer.generateAIReview",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Reviewer",
      "properties": {
        "reviewer.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size in bytes to include in reports (default: 1MB)",
          "minimum": 1024
        },
        "reviewer.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/package-lock.json",
            "**/yarn.lock",
            "**/*.log"
          ],
          "description": "Glob patterns to exclude from diffs and reviews",
          "items": {
            "type": "string"
          }
        },
        "reviewer.aiProvider": {
          "type": "string",
          "enum": [
            "gemini",
            "openrouter"
          ],
          "default": "gemini",
          "description": "AI provider to use for code reviews"
        },
        "reviewer.aiModel": {
          "type": "string",
          "enum": [
            "gemini-3-pro-preview",
            "gemini-1.5-pro",
            "gemini-1.5-flash",
            "gemini-2.0-flash-exp"
          ],
          "default": "gemini-3-pro-preview",
          "description": "Gemini AI model to use for code reviews"
        },
        "reviewer.openRouterModel": {
          "type": "string",
          "default": "openai/gpt-4o",
          "description": "OpenRouter model to use (e.g., openai/gpt-4o, anthropic/claude-3.5-sonnet, google/gemini-pro-1.5)"
        },
        "reviewer.customPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom AI review prompt (leave empty to use default)",
          "editPresentation": "multilineText"
        },
        "reviewer.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Custom directory for generated reports (relative to workspace root, leave empty for workspace root)"
        },
        "reviewer.autoOpenReports": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open reports after generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "keywords": [
    "git",
    "diff",
    "review",
    "ai",
    "gemini",
    "code-review",
    "code-quality"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "node-fetch": "^3.3.2"
  }
}
